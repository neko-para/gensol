target demolib
	install
	compiler = default
	source + src/lib/*.c
	insthdr + src/lib/*.h
	cflags = -Ofast
	type = archive
	output = libdemo.a
done

target demo
	install
	default
	compiler = default
	require = demolib
	source + src/*.c
	cflags = -Ofast
	output = demo
	link = demolib
done

target all
	phony
	default
	require = demo
done
